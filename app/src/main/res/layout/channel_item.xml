<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/channelItemImageView"
            android:background="@drawable/channel_bubble"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    <LinearLayout
            android:layout_toRightOf="@id/channelItemImageView"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/channelItemReceiver"
                android:text="John Doe"
                android:textSize="18sp"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/channelItemLastMessage"
                android:text="XX messages in channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>