<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/welcomeInnerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <TextView
                android:id="@+id/welcomeTitle"
                android:text="Welcome"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                android:textStyle="bold"
                android:textColor="@color/secondaryDarkColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/welcomeSubtitle"
                android:layout_below="@id/welcomeTitle"
                android:text="Please sign in or create a new account"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="@color/secondaryDarkColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/welcomeEmail"
                android:layout_below="@id/welcomeSubtitle"
                android:layout_marginTop="56dp"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/welcomeEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/welcomePassword"
                android:layout_below="@id/welcomeEmail"
                android:layout_marginTop="16dp"
                android:hint="Password"
                app:endIconMode="password_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/welcomePasswordInput"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/welcomeLoginButton"
                android:layout_below="@id/welcomePassword"
                android:layout_marginTop="16dp"
                android:text="Login"
                android:backgroundTint="@color/secondaryColor"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        <RelativeLayout
                android:id="@+id/welcomeAdditionalOptions"
                android:layout_below="@id/welcomeLoginButton"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="32dp">

            <TextView
                    android:id="@+id/welcomeSignUp"
                    android:text="Sign up"
                    android:textColor="@color/secondaryColor"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/welcomeForgotPassword"
                    android:text="Forgot password?"
                    android:textColor="@color/secondaryColor"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>