<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <ImageView
            android:id="@+id/messageItemProfilePicture"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/channel_bubble"/>

    <TextView
            android:id="@+id/messageItemMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample text that we can expect someone to send us, let's just say this person had too much to say..."
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"/>

</LinearLayout>